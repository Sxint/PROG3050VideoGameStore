@model PROG3050VideoGameStore.Models.UserProfile

<head>
    <link rel="stylesheet" href="~/css/LoginRegister.css" asp-append-version="true" />
</head>

<div class="mainForm">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <h1>Login</h1>

        <div class="form-group">
            @Html.LabelFor(model => model.DisplayName)
            @Html.TextBoxFor(model => model.DisplayName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DisplayName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="button btn btn-primary" />
        </div>

        <div class="form-group">
            <p>don't have an account? <a href="../Views/LoginRegister/Register"> Sign Up </a> </p>
        </div>
    }
</div>