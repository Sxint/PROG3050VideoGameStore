@model PROG3050VideoGameStore.ViewModels.LoginVM

<head>
    <link rel="stylesheet" href="~/css/LoginRegister.css" asp-append-version="true" />
</head>

<div class="mainForm">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <h1>Login</h1>

        <div class="form-group message">

            <p> @ViewData["Message"]</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Username)
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "validation-error" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-error" })
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="button btn btn-primary" />
        </div>

        <div class="form-group">
            <p>don't have an account? <a asp-area="" asp-controller="LoginRegister" asp-action="Register">Sign Up</a></p>
        </div>

        <div class="form-group">
            <p>Forgot your password? <a asp-area="" asp-controller="LoginRegister" asp-action="EmailResetPassword">Reset Password</a></p>
        </div>
    }
</div>