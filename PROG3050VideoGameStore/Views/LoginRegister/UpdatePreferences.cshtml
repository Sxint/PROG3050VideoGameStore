@model PROG3050VideoGameStore.Models.ProfilePreferences

<head>
    <link rel="stylesheet" href="~/css/LoginRegister.css" asp-append-version="true" />
</head>

<div class="mainForm">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <h1>Preferences</h1>

        <div class="form-group">

            <p> @ViewData["Message"]</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FavPlatform)
            <select id="FavPlatform" name="FavPlatform" class="form-control" asp-for="@Model.FavPlatform">
                <option value="None">None</option>
                <option value="PC">PC</option>
                <option value="PS">PS</option>
                <option value="XBOX">XBOX</option>
            </select>
            @Html.ValidationMessageFor(model => model.FavPlatform)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FavCategory)
            <select id="FavCategory" name="FavCategory" class="form-control" asp-for="@Model.FavCategory">
                <option value="None">None</option>
                <option value="Action">Action</option>
                <option value="Sci-Fi">Sci-Fi</option>
                <option value="Fantasy">Fantasy</option>
                <option value="RPG">RPG</option>
            </select>
            @Html.ValidationMessageFor(model => model.FavCategory)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Language)
            <select id="Language" name="Language" class="form-control" asp-for="@Model.Language">
                <option value="None">None</option>
                <option value="English">English</option>
                <option value="French">French</option>
                <option value="Spanish">Spanish</option>
            </select>
            @Html.ValidationMessageFor(model => model.Language)
        </div>

        <div style="display: none;">

            @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
            @Html.TextBoxFor(model => model.UserProfileId, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="button btn btn-primary" />
        </div>
    }
</div>
